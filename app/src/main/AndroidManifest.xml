<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mahmoud.bazioriazi"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <activity
            android:name="mahmoud.bazioriazi.MainActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >

        </activity>
        <activity
            android:name="mahmoud.bazioriazi.playasan"
            android:label="@string/title_activity_playasan"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="mahmoud.bazioriazi.Playmotevaset"
            android:label="@string/title_activity_playmotevaset"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="mahmoud.bazioriazi.Result"
            android:label="@string/title_activity_result"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="mahmoud.bazioriazi.playsakht"
            android:label="@string/title_activity_playsakht"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="mahmoud.bazioriazi.contactus_help"
            android:label="@string/title_activity_contactus_help"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="mahmoud.bazioriazi.splash_activity"
            android:label="@string/title_activity_main"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>

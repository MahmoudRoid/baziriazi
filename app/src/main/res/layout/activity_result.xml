<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="Mahmoud.baziriazi.Result"
    android:background="#03A9F4">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginTop="50dp"
    android:paddingBottom="70dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:text="@string/emtiaz"
        android:textSize="40sp" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/textView2"
        android:text="11"
        android:textSize="120sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear_bestresult"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="0.5"
            android:text="0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="0.5"
            android:text="@string/best_result"
            android:paddingLeft="10dp"
            android:textSize="30sp"
          />




    </LinearLayout>

</RelativeLayout>

   <!-- baraye 3 buttone paeen -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:weightSum="1.1" >

        <Button
            android:id="@+id/buttonreplay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:text="یه بار دیگه"
            android:textSize="33sp"
            android:onClick="replay"
            android:background="@drawable/button_background"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            />

        <Button
            android:id="@+id/buttonmenu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:text="منو"
            android:textSize="33sp"
            android:onClick="goto_menu"
            android:background="@drawable/button_background"/>
    </LinearLayout>




</RelativeLayout>
